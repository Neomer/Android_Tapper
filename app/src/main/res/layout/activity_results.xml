<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">

    <TextView
        android:id="@+id/labelGameResults"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="217dp"
        android:layout_marginLeft="217dp"
        android:layout_marginRight="217dp"
        android:layout_marginStart="217dp"
        android:layout_marginTop="36dp"
        android:text="@string/GameResults"
        android:textColor="@color/HUDfontTime"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/GameResults" />

    <TextView
        android:id="@+id/labelTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:text="@string/TotalTime"
        android:textColor="@color/HUDfontTime"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvTotalTime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelGameResults"
        tools:text="@string/TotalTime" />

    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="@color/HUDfontTime"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelGameResults" />

    <Button
        android:id="@+id/btnToMainMenu"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="210dp"
        android:layout_marginLeft="210dp"
        android:layout_marginRight="210dp"
        android:layout_marginStart="210dp"
        android:background="@drawable/image_button"
        android:text="@string/MainMenu"
        android:textColor="@color/fontMainMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/MainMenu" />

</android.support.constraint.ConstraintLayout>